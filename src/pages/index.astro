---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold text-gray-800 mb-6">
        Helping Children and Adults<br />
        <span class="text-teal-600">Find Their Voice</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
        Personalized speech therapy services designed to help you or your child communicate with confidence.
      </p>
      <a 
        href="/contact" 
        class="inline-block bg-teal-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-teal-700 transition-colors"
      >
        Schedule a Consultation
      </a>
    </div>
  </section>
</Layout>


