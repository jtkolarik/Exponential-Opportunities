---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Kolarik Speech Therapy - Personalized home health speech therapy services helping children and adults communicate with confidence." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Kolarik Speech Therapy</title>
  </head>
  <body class="bg-cream text-warmgray-700 min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>


